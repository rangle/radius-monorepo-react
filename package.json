{
  "name": "@rangle/segment-monorepo-react",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "run-many": "nx run-many --all --parallel --exclude=demo",
    "build": "npm run run-many -- --target=build",
    "test": "npm run run-many -- --target=test",
    "build:affected": "npm run build -- --affected",
    "test:affected": "npm run test -- --affected",
    "build:force": "npm run build --skip-nx-cache",
    "clean": "lerna run clean && rm -rf node_modules",
    "lint": "NODE_ENV=test ./node_modules/.bin/eslint -c ./.eslintrc . --report-unused-disable-directives --ignore-path ./.eslintignore",
    "ls-lint": "ls-lint",
    "lint:ci": "run-p lint ls-lint",
    "postinstall": "npm run bootstrap && remix setup node",
    "pretest": "npm run bootstrap",
    "test:watch": "lerna run test -- --watch",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "nx:graph": "nx graph",
    "generate:component": "plop component --plopfile ./templates/plopfile.js",
    "g:c": "npm run generate:component",
    "prepare": "husky install"
  },
  "private": true,
  "peerDependencies": {
    "react": ">=18"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@nrwl/nx-cloud": "latest",
    "@nrwl/remix": "^14.7.0",
    "@remix-run/dev": "^1.6.8",
    "@remix-run/eslint-config": "^1.6.8",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.27.0",
    "eslint-plugin-jest": "^26.9.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lerna": "^6.0.3",
    "nx": "15.2.0",
    "plop": "^3.1.1",
    "prettier": "^2.7.1",
    "rollup": "^2.79.1",
    "rollup-plugin-postcss": "^4.0.2",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
